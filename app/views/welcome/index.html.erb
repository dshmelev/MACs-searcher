<div class="site-wrapper">
  <div class="site-wrapper-inner">
    <div class="cover-container">
      <div class="masthead clearfix">
        <div class="inner">
          <h3 class="masthead-brand">
            <a class="navbar-brand" rel="home" href="http://kirzhachtelecom.ru" title="KirzhachTelecom WebSite">
              <%= image_tag("logo.png", :alt => "rss feed") %>
            </a>
          </h3>
          <nav>
            <ul class="nav masthead-nav">
              <li class="active"><a href="https://kirzhachtelecom.ru">Home site</a></li>
              <li><a href="https://wiki.kirzhachtelecom.ru">Wiki</a></li>
              <li><a href="https://macs.kirzhachtelecom.ru">MACs</a></li>
              <li><a href="http://mon.kirzhachtelecom.ru:8080">Dude</a></li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="inner cover">
        <h1 class="cover-heading">MACs project</h1>
        <%= form_tag("/search", method: "get") do %>
            <div class="input-group input-group-lg">
              <input type="text" class="form-control" name="userdata" placeholder="Search for...">
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: "btn btn-default") do %><span class="glyphicon glyphicon-search" aria-hidden="true"></span><% end %>
              </span>
            </div>
        <% end %>
      </div>
      <% unless @record.nil? %>
        <%= render partial: 'table', locals: {record: @record} %>
      <% end %>
      <%= flash_messages %>
      <div class="mastfoot">
        <div class="inner">
          <p><a href="http://kirzhachtelecom.ru">KirzhachTelecom</a>, by <a href="mailto:avikez@gmail.com">Dmitry Shmelev</a>.</p>
        </div>
      </div>
    </div>
  </div>
</div>

